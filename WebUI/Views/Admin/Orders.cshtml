@model IEnumerable<Store.Domain.Entities.Order>

@{
    ViewBag.Title = "Панель администратора - заказы";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default withbackgr">
    <div class="panel-heading">
        <h3>Заказы</h3>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-condensed table-bordered table-responsive table-hover">
            <tr>
                <th>Номер заказа</th>
                <th>Клиент</th>
                <th>Дата</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td class="text-center">@item.Client</td>
                    <td class="text-center">@item.time</td>
                    <td>@Html.ActionLink("Перейти", "OrderDetails", "Admin", new { orderId = item.Id }, null)</td>
                </tr>
            }

        </table>
    </div>
</div>

