@model IEnumerable<Store.Domain.Entities.Order>

@{
    ViewBag.Title = "Панель администратора - заказы";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default withbackgr">
    <div class="panel-heading">
        <h3>Заказы</h3>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>Клиент</th>
                <th>Телефон</th>
                <th>E-mail</th>
                <th>Сумма</th>
                <th>Статус</th>
                <th>Товары</th>
                <th>Дата</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Client</td>
                    <td class="text-left">@item.Phone</td>
                    <td class="text-center">@item.Email</td>
                    <td class="text-center">@item.Sum</td>
                    <td class="text-center">@item.Status</td>
                    <td>
                        <table class="table">
                            <tr>
                                <th>Id</th>
                                <th>Имя</th>
                                <th>Количество</th>
                                <th>Цена</th>
                            </tr>
                            @foreach (var i in item.Items)
                            {
                               <tr>
                                    <td class="text-center">@i.Id</td>
                                    <td class="text-left">@i.Name</td>
                                    <td class="text-center">@i.Quantity</td>
                                    <td class="text-center">@i.Price</td>
                               </tr>
                            }
                         </table>
                    </td>
                    <td class="text-center">@item.time</td>
                </tr>
            }

        </table>
    </div>
</div>

